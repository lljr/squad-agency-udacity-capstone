<button class="uppercase tracking-wider bg-blue-500 active:bg-blue-700 hover:bg-blue-700 font-bold py-2 px-4 text-white rounded">
  {{#if this.isAuthenticated}}
      <a {{on 'click' this.logout}}>
        Logout
      </a>
  {{else}}
      <a {{on 'click' this.login}}>
        Login
      </a>
  {{/if}}
</button>
